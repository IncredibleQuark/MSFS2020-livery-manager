{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2020,
    "sourceType": "module",
    "requireConfigFile": false
  },
  "plugins": ["react", "jsdoc", "react-hooks"],
  "rules": {
    "semi": "error"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
